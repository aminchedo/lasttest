{
  "name": "persian-ml-platform",
  "version": "3.0.0",
  "description": "پلتفرم آموزش و مدیریت مدل‌های هوش مصنوعی فارسی",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon --config nodemon.json server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node server/simple-server.mjs",
    "start:simple": "node server/simple-server.mjs",
    "install:all": "npm install && cd client && npm install",
    "db:test": "node server/test-database.js",
    "db:seed": "node server/seed-data.js",
    "db:reset": "rm -f data/app.db && node server/seed-data.js",
    "archive:dry": "node scripts/archive-old-files.mjs --dry",
    "archive:run": "node scripts/archive-old-files.mjs"
  },
  "dependencies": {
    "archiver": "^6.0.1",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "lowdb": "^7.0.1",
    "lru-cache": "^11.2.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.7.2",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}