/* تم و استایل‌های RTL برای سیستم آموزش مدل فارسی */
:root {
    --c-bg-grad-1: #5e60f0;
    --c-bg-grad-2: #7c9df4;
    --c-surface: #ffffff;
    --c-text: #0f172a;
    --c-text-muted: #55607a;
    --c-primary: #4f46e5;
    --c-primary-700: #4338ca;
    --c-border: #e5e7eb;
    --radius: 16px;
    --shadow: 0 10px 30px rgba(10, 14, 60, 0.12);
    --blur: 10px;
}

/* تنظیمات پایه */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    font-size: 16px;
    scroll-behavior: smooth;
}

body {
    background: radial-gradient(1200px 600px at 20% -10%, var(--c-bg-grad-2), transparent),
        linear-gradient(135deg, var(--c-bg-grad-1), var(--c-bg-grad-2));
    min-height: 100vh;
    font-family: 'Vazirmatn', 'Noto Sans Arabic', Tahoma, 'Segoe UI', sans-serif;
    direction: rtl;
    color: var(--c-text);
    line-height: 1.6;
}

/* ساختار اصلی اپ */
.app {
    display: flex;
    min-height: 100vh;
}

.main-wrapper {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.main-content {
    flex: 1;
    overflow-y: auto;
    padding: 1.5rem;
}

/* Header */
.header {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
}

.header-left {
    flex: 1;
}

.header-search {
    flex: 2;
    max-width: 400px;
}

.header-right {
    flex: 1;
    display: flex;
    justify-content: flex-end;
}

.page-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--c-text);
}

.user-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.user-avatar {
    width: 40px;
    height: 40px;
    background: rgba(79, 70, 229, 0.1);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
}

.user-info {
    text-align: right;
}

.user-name {
    font-weight: 600;
    font-size: 0.875rem;
}

.user-role {
    font-size: 0.75rem;
    color: var(--c-text-muted);
}

.notification-badge {
    position: absolute;
    top: -2px;
    right: -2px;
    background: var(--c-primary);
    color: white;
    font-size: 0.6rem;
    padding: 0.1rem 0.3rem;
    border-radius: 10px;
    min-width: 16px;
    text-align: center;
}

/* Footer */
.footer {
    background: rgba(255, 255, 255, 0.85);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(255, 255, 255, 0.3);
    padding: 1rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 0.875rem;
    color: var(--c-text-muted);
}

.footer-left {
    display: flex;
    align-items: center;
    gap: 1rem;
}

.version-badge {
    background: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.75rem;
}

.footer-links {
    display: flex;
    gap: 1rem;
}

.footer-link {
    color: var(--c-text-muted);
    text-decoration: none;
}

.footer-link:hover {
    color: var(--c-primary);
}

.status-online {
    color: #10b981;
    font-weight: 500;
}

/* کارت‌ها */
.card {
    background: rgba(255, 255, 255, 0.85);
    -webkit-backdrop-filter: blur(var(--blur));
    backdrop-filter: blur(var(--blur));
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    padding: 1.5rem;
}

/* دکمه‌ها */
.btn {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.625rem 1rem;
    border-radius: 12px;
    border: 1px solid var(--c-border);
    background: #fff;
    color: var(--c-text);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: pointer;
    font-family: inherit;
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
}

.btn:hover,
.btn:focus {
    transform: translateY(-1px);
    box-shadow: 0 10px 20px rgba(30, 58, 138, 0.15);
}

.btn-primary {
    background: linear-gradient(135deg, var(--c-primary), var(--c-primary-700));
    color: #fff;
    border-color: transparent;
}

.btn-primary:hover,
.btn-primary:focus {
    background: linear-gradient(135deg, var(--c-primary-700), var(--c-primary));
}

.btn:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
}

/* فیلدهای ورودی */
.input {
    width: 100%;
    padding: 0.75rem 0.9rem;
    border: 1px solid var(--c-border);
    border-radius: 12px;
    background: #fff;
    font-family: inherit;
    font-size: 0.875rem;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
}

.input:focus {
    outline: none;
    border-color: var(--c-primary);
    box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
}

/* برچسب‌ها */
.label {
    font-weight: 600;
    color: var(--c-text);
    margin-bottom: 0.35rem;
    display: block;
}

.helper {
    font-size: 0.85rem;
    color: var(--c-text-muted);
    margin-top: 0.35rem;
}

/* ناوبری */
.nav-pill {
    border-radius: 999px;
    padding: 0.5rem 0.9rem;
    border: 1px solid rgba(255, 255, 255, 0.5);
    background: rgba(255, 255, 255, 0.25);
    color: #fff;
    backdrop-filter: blur(6px);
    cursor: pointer;
    transition: all 0.2s ease;
    font-size: 0.875rem;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    width: 100%;
    margin-bottom: 0.5rem;
}

.nav-pill:hover {
    background: rgba(255, 255, 255, 0.4);
}

.nav-pill.active {
    background: #fff;
    color: var(--c-primary);
    border-color: transparent;
}

/* Sidebar */
.sidebar {
    width: 280px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    border-left: 1px solid rgba(255, 255, 255, 0.2);
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

.sidebar-header {
    padding: 1.5rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    position: relative;
}

.logo-box {
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, var(--c-primary), var(--c-primary-700));
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 0.75rem;
}

.logo-icon {
    font-size: 1.25rem;
    color: white;
}

.logo-title {
    font-weight: 700;
    font-size: 1.125rem;
    color: white;
    margin-bottom: 0.25rem;
}

.logo-subtitle {
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
}

.menu-container {
    flex: 1;
    padding: 1rem;
    overflow-y: auto;
}

.menu-category {
    font-size: 0.75rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.7);
    text-transform: uppercase;
    margin: 1.5rem 0 0.75rem 0;
    padding-right: 0.5rem;
}

.sidebar-footer {
    padding: 1rem;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
}

.system-info {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;
}

.status-indicator {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-dot {
    width: 8px;
    height: 8px;
    background: #10b981;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

@keyframes pulse {

    0%,
    100% {
        opacity: 1;
    }

    50% {
        opacity: 0.5;
    }
}

/* استایل‌های خاص برای صفحات */
.page-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 200px;
    gap: 1rem;
}

.loading-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid var(--c-border);
    border-top: 3px solid var(--c-primary);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }
}

/* مدل کارت‌ها */
.model-card {
    background: rgba(255, 255, 255, 0.9);
    border-radius: var(--radius);
    padding: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.3);
    box-shadow: var(--shadow);
    transition: all 0.2s ease;
    cursor: pointer;
}

.model-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 15px 40px rgba(10, 14, 60, 0.15);
}

.model-card.selected {
    border-color: var(--c-primary);
    box-shadow: 0 0 0 2px rgba(79, 70, 229, 0.2);
}

.model-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
}

.model-icon {
    width: 40px;
    height: 40px;
    background: rgba(79, 70, 229, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--c-primary);
}

.model-info {
    flex: 1;
}

.model-name {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.model-description {
    color: var(--c-text-muted);
    font-size: 0.875rem;
}

.model-select input[type="checkbox"] {
    width: 18px;
    height: 18px;
    accent-color: var(--c-primary);
}

.model-details {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 1rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
}

.model-meta {
    display: flex;
    gap: 0.5rem;
}

.model-type,
.model-size {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: rgba(0, 0, 0, 0.05);
    border-radius: 4px;
    color: var(--c-text-muted);
}

.model-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.status-text {
    font-size: 0.875rem;
    color: var(--c-text-muted);
}

.status-ready {
    color: #10b981;
}

.status-downloading {
    color: #f59e0b;
}

.status-error {
    color: #ef4444;
}

.status-pending {
    color: var(--c-text-muted);
}

/* فیلترها */
.filters-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.search-box {
    position: relative;
    flex: 1;
    max-width: 300px;
}

.search-box svg {
    position: absolute;
    right: 0.75rem;
    top: 50%;
    transform: translateY(-50%);
    color: var(--c-text-muted);
    width: 16px;
    height: 16px;
}

.search-box input {
    padding-right: 2.5rem;
}

.filter-buttons {
    display: flex;
    gap: 0.5rem;
}

.filter-btn {
    padding: 0.5rem 1rem;
    border: 1px solid var(--c-border);
    border-radius: 20px;
    background: transparent;
    color: var(--c-text-muted);
    cursor: pointer;
    font-size: 0.875rem;
    transition: all 0.2s ease;
}

.filter-btn:hover {
    background: rgba(79, 70, 229, 0.1);
    color: var(--c-primary);
}

.filter-btn.active {
    background: var(--c-primary);
    color: white;
    border-color: var(--c-primary);
}

/* گرید مدل‌ها */
.models-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
}

.no-models {
    grid-column: 1 / -1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem;
    color: var(--c-text-muted);
    gap: 1rem;
}

/* صفحه */
.models-page {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.page-title {
    font-size: 1.875rem;
    font-weight: 700;
    color: var(--c-text);
}

.page-actions {
    display: flex;
    gap: 1rem;
}

/* Dashboard Styles */
.dashboard-page {
    padding: 2rem;
    max-width: 1400px;
    margin: 0 auto;
}

.stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
}

.stat-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}

.stat-icon {
    width: 40px;
    height: 40px;
    background: rgba(79, 70, 229, 0.1);
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.2rem;
}

.stat-trend {
    color: #10b981;
    font-weight: 600;
}

.stat-content {
    text-align: right;
}

.stat-value {
    font-size: 2rem;
    font-weight: 700;
    color: var(--c-text);
    margin-bottom: 0.25rem;
}

.stat-label {
    font-size: 0.875rem;
    color: var(--c-text-muted);
    margin-bottom: 0.25rem;
}

.stat-sublabel {
    font-size: 0.75rem;
    color: var(--c-text-muted);
}

.activities-section {
    margin-top: 2rem;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1rem;
}
/* Monitoring Strip */
.monitoring-strip {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(10px);
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding: 0.5rem 1rem;
    font-size: 0.75rem;
    z-index: 1000;
}

.monitoring-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
}

.health-status {
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.health-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    animation: pulse 2s infinite;
}

.health-text {
    font-weight: 500;
}

.latency-text {
    color: var(--c-text-muted);
    font-size: 0.7rem;
}

.recent-calls {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex: 1;
    justify-content: center;
}

.recent-label {
    color: var(--c-text-muted);
}

.call-item {
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    font-size: 0.7rem;
}

.call-item.success {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
}

.call-item.error {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
}

.monitoring-toggle {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 4px;
    color: var(--c-text-muted);
}

.monitoring-toggle:hover {
    background: rgba(0, 0, 0, 0.05);
}

.monitoring-details {
    margin-top: 0.5rem;
    padding-top: 0.5rem;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    display: flex;
    gap: 1rem;
}

.detail-item {
    display: flex;
    gap: 0.25rem;
    font-size: 0.7rem;
}

/* Catalog Picker Styles */
.catalog-picker {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.selection-section {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.section-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 600;
    color: var(--c-text);
}

.resource-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1rem;
}

.resource-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid var(--c-border);
    border-radius: var(--radius);
    background: #fff;
    cursor: pointer;
    transition: all 0.2s ease;
}

.resource-item:hover {
    border-color: var(--c-primary);
    box-shadow: 0 4px 12px rgba(79, 70, 229, 0.1);
}

.resource-item.selected {
    border-color: var(--c-primary);
    background: rgba(79, 70, 229, 0.05);
}

.resource-icon {
    font-size: 1.5rem;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(79, 70, 229, 0.1);
    border-radius: 8px;
}

.resource-info {
    flex: 1;
}

.resource-info h4 {
    font-size: 0.875rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
}

.resource-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.75rem;
    color: var(--c-text-muted);
}

.meta-tag {
    background: rgba(0, 0, 0, 0.05);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
}

.selection-summary {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    background: rgba(79, 70, 229, 0.05);
    border-radius: var(--radius);
    border: 1px solid rgba(79, 70, 229, 0.2);
}

.summary-item {
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
}

.error-banner {
    padding: 0.75rem 1rem;
    background: rgba(239, 68, 68, 0.1);
    border: 1px solid rgba(239, 68, 68, 0.2);
    border-radius: var(--radius);
    color: #ef4444;
    margin-bottom: 1rem;
}

.retry-btn {
    background: none;
    border: none;
    color: inherit;
    cursor: pointer;
    padding: 0.25rem;
    border-radius: 4px;
}

.retry-btn:hover {
    background: rgba(0, 0, 0    .recent-calls {
