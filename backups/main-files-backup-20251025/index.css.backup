  transition: stroke-dashoffset 0.5s ease-in-out;
}

.circular-progress-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 0.125rem;
}

.circular-progress-text {
  font-size: 0.7rem;
  font-weight: 700;
  color: var(--text-primary);
