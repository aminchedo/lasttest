  .header-modern {
    padding: 1rem;
    gap: 1rem;
  }

  .header-center {
    display: none;
  }

  .guardian-section {
    gap: 0.75rem;
  }

  .guardian-icon {
    width: 40px;
    height: 40px;
  }

  .page-title-modern {
    font-size: 1.25rem;
  }

  .page-subtitle {
    font-size: 0.8rem;
  }

  .system-indicators {
    gap: 0.5rem;
  }

  .user-section {
    gap: 0.5rem;
  }

  .user-info-modern {
    display: none;
  }

  .system-monitor-content {
    min-width: 300px;
    right: -50px;
  }

  .system-metrics-grid {
    grid-template-columns: 1fr;
    gap: 0.75rem;
  }

  .system-metrics-row {
    grid-template-columns: repeat(2, 1fr);
  }

